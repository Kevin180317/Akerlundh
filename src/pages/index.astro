---
import { slide } from "astro:transitions";
import Layout from "@layouts/Layout.astro";
import Hero from "@components/Carrousel.jsx";
import About from "@components/About.astro";
import Services from "@components/Services.jsx";
import Partners from "@components/Partners.astro";
import Projects from "@components/Projects.astro";
import Team from "@components/Team.astro";
import Footer from "@components/Footer.astro";
import PartnersList from "@components/PartnersList.astro";

const cards = [
  {
    id: 1,
    title: " Custom-designed furniture",
    description:
      "Transform your space with custom-designed furniture that perfectly matches your style and needs. ",
    image: "/silla.jpg",
    link: "/services/service1",
  },
  {
    id: 2,
    title: " Tables",
    description: " Tables for every style and purpose",
    image: "/silla2.png",
    link: "/services/service2",
  },
  {
    id: 3,
    title: " Interior design services",
    description:
      "Elevate your living or working space with our expert interior design services.",
    image: "/silla3.png",
    link: "/services/service3",
  },
];
---

<Layout title="Akerlundh">
  <main transition:animate={slide({ duration: "1s" })}>
    <Hero client:load />
    <About />
    <Services cards={cards} client:visible />
    <Partners />
    <Projects />
    <!-- <Team /> -->
    <PartnersList />
    <hr class="border border-black w-full" />
    <Footer />
  </main>
</Layout>
