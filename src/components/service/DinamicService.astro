---
let { service, imageUrl, description } = Astro.props;
---

<main class="p-4 mt-16 mb-8 flex flex-col items-center md:w-[80%] mx-auto">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full max-w-4xl">
    <div class="relative">
      <img
        src={imageUrl}
        alt={service}
        class="w-[500px] h-[600px] object-cover rounded-lg shadow-lg"
      />
    </div>
    <div class="flex flex-col p-4">
      <h1 class="text-2xl font-bold mb-4">{service}</h1>
      <p class="text-gray-700">{description}</p>
    </div>
  </div>
</main>
